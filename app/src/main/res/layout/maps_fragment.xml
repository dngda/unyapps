<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <org.osmdroid.views.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_gravity="top|end"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:elevation="3dp"
            app:backgroundTint="#ffffffff"
            app:tint="@color/violet"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_location"
            android:layout_width="wrap_content"
            app:fabSize="mini"
            android:scaleType="center"
            android:id="@+id/fabmyLocation"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:elevation="3dp"
            app:backgroundTint="#ffffffff"
            android:layout_gravity="bottom|end"
            app:tint="@color/violet"
            android:src="@drawable/ic_gedung"
            android:layout_width="wrap_content"
            app:fabSize="mini"
            android:id="@+id/fabBuilding"
            android:layout_margin="16dp"
            android:scaleType="center"
            android:layout_height="wrap_content"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:elevation="3dp"
            app:backgroundTint="#ffffffff"
            app:tint="@color/violet"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_parking"
            android:layout_width="wrap_content"
            app:fabSize="mini"
            android:id="@+id/fabParking"
            android:layout_margin="16dp"
            android:scaleType="center"
            android:layout_height="wrap_content"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:elevation="3dp"
            app:tint="@color/violet"
            app:backgroundTint="#ffffffff"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_masjid"
            android:layout_width="wrap_content"
            app:fabSize="mini"
            android:id="@+id/fabMosque"
            android:layout_margin="16dp"
            android:scaleType="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:id="@+id/laytipe"
        android:layout_gravity="bottom|center"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:elevation="3dp"
            app:backgroundTint="#ffffffff"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_directions_walk_grey"
            android:layout_width="wrap_content"
            app:fabSize="normal"
            android:scaleType="center"
            app:tint="@color/colorPrimary"
            android:id="@+id/fabwalk"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:elevation="3dp"
            app:backgroundTint="#ffffffff"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_directions_bike_grey"
            android:layout_width="wrap_content"
            app:fabSize="normal"
            android:id="@+id/fabbike"
            app:tint="@color/colorPrimary"
            android:layout_margin="16dp"
            android:scaleType="center"
            android:layout_height="wrap_content"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:elevation="3dp"
            app:backgroundTint="#ffffffff"
            app:tint="@color/colorPrimary"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_direction_motorcycle_grey"
            android:layout_width="wrap_content"
            app:fabSize="normal"
            android:id="@+id/fabmoto"
            android:layout_margin="16dp"
            android:scaleType="center"
            android:layout_height="wrap_content"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:elevation="3dp"
            app:backgroundTint="#ffffffff"
            app:tint="@color/colorPrimary"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_directions_car_grey"
            android:layout_width="wrap_content"
            app:fabSize="normal"
            android:id="@+id/fabcar"
            android:layout_margin="16dp"
            android:scaleType="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="FIS UNY"
                    android:id="@+id/gedung_name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#6979f8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:id="@+id/roomAvv"
                        android:text="Room available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_gedung"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:text="Didital librari "
                            android:textStyle="bold"
                            android:id="@+id/tvRoom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_gravity="right"
                        android:layout_margin="3dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="#6979f8"
                        app:cardCornerRadius="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/directLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_margin="5dp"
                                android:src="@drawable/ic_petunjuk"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>
                            <TextView
                                android:text="PETUNJUK ARAH"
                                android:textStyle="bold"
                                android:textColor="#ffffffff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_gravity="right"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="#6979f8"
                        app:cardCornerRadius="25dp"
                        android:layout_width="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/directGmaps"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_margin="5dp"
                                android:src="@drawable/ic_petunjuk"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>
                            <TextView
                                android:text="LIHAT DI GMAPS"
                                android:textStyle="bold"
                                android:textColor="#ffffffff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="right"
                android:weightSum="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mancj.materialsearchbar.MaterialSearchBar
            app:floatingSearch_backgroundColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:id="@+id/searching"
            app:mt_hint="Cari Ruangan"
            app:mt_maxSuggestionsCount="10"
            app:mt_roundedSearchBarEnabled="true"
            app:mt_placeholder="Cari Ruangan"
            android:layout_above="@id/mapview"
            />
    </FrameLayout>
</FrameLayout>